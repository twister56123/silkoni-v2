---
interface Props {
  title: string;
  description?: string;
}

const {
  title,
description = "Шовкові наволочки 2190₴ та тюрбани 1990₴. 100% натуральний шовк 22 momme для здорового волосся та шкіри. Доставка Новою Поштою по Україні."} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site ?? 'https://silkoni.com');

import '../styles/global.css';
import CartStore from '@/components/CartStore.astro';
import CartDrawer from '@/components/CartDrawer.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
---

<!doctype html>
<html lang="uk">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- SEO -->
    <title>{title || 'Шовкові наволочки та тюрбани преміум якості | SILKONI'}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content="uk_UA" />
    <meta property="og:site_name" content="SILKONI" />
    <meta property="og:image" content="https://silkoni.com/og-image.jpg">
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="SILKONI - Шовкові наволочки та тюрбани" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://silkoni.com/og-image.jpg">
    <meta name="twitter:image:alt" content="SILKONI - Шовкові наволочки та тюрбани" />

    <!-- Schema.org Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "Organization",
          "@id": "https://silkoni.com/#organization",
          "name": "SILKONI",
          "url": "https://silkoni.com",
          "logo": "https://silkoni.com/favicon.svg",
          "sameAs": [
            "https://www.instagram.com/silkoni.beauty/"
          ]
        },
        {
          "@type": "WebSite",
          "@id": "https://silkoni.com/#website",
          "url": "https://silkoni.com",
          "name": "SILKONI",
          "publisher": {"@id": "https://silkoni.com/#organization"}
        },
        {
          "@type": "Product",
          "name": "Шовкова наволочка SILKONI",
          "description": "Преміальна шовкова наволочка для здорового сну. 100% натуральний шовк 22 momme.",
          "image": "https://silkoni.com/og-image.jpg",
          "brand": {
            "@type": "Brand",
            "name": "SILKONI"
          },
          "offers": {
            "@type": "Offer",
            "price": "2190",
            "priceCurrency": "UAH",
            "availability": "https://schema.org/InStock",
            "url": "https://silkoni.com/#products",
            "priceValidUntil": "2026-12-31"
          }
        },
        {
          "@type": "Product",
          "name": "Шовковий тюрбан SILKONI",
          "description": "Шовковий тюрбан для делікатного догляду за волоссям. 100% натуральний шовк.",
          "image": "https://silkoni.com/og-image.jpg",
          "brand": {
            "@type": "Brand",
            "name": "SILKONI"
          },
          "offers": {
            "@type": "Offer",
            "price": "1990",
            "priceCurrency": "UAH",
            "availability": "https://schema.org/InStock",
            "url": "https://silkoni.com/#products",
            "priceValidUntil": "2026-12-31"
          }
        },
        {
          "@type": "FAQPage",
          "mainEntity": [
            {
              "@type": "Question",
              "name": "Як доглядати за шовковою наволочкою?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "Рекомендуємо ручне прання при температурі до 30°C. Не використовуйте відбілювачі та пральну машину."
              }
            },
            {
              "@type": "Question",
              "name": "Яка доставка?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "Доставляємо Новою Поштою по всій Україні за тарифами перевізника."
              }
            },
            {
              "@type": "Question",
              "name": "Чи можна повернути товар?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "Згідно законодавства, шовкові вироби належної якості не підлягають поверненню. Обмін або повернення можливі тільки при виявленні дефекту протягом 7 днів."
              }
            },
            {
              "@type": "Question",
              "name": "Це справжній шовк?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "Так, ми використовуємо 100% натуральний шовк щільністю 22 momme — це преміальна якість."
              }
            }
          ]
        }
      ]
    })} />

     <!-- Preload hero image for LCP -->
    <link rel="preload" as="image" href="/hero-mobile.jpg" media="(max-width: 768px)" fetchpriority="high" />
    <link rel="preload" as="image" href="/hero.jpg" media="(min-width: 769px)" fetchpriority="high" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Theme -->
    <meta name="theme-color" content="#000000" />

<style is:global>
  /* Button hover with shadow */
  .btn-add-to-cart {
    background: #000;
    transition: all 0.3s ease;
  }

  .btn-add-to-cart:hover {
    background: #1f1f1f;
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.3), 0 4px 6px -4px rgb(0 0 0 / 0.2);
  }

  /* Button success state */
  .btn-add-to-cart.success {
    background: #047857 !important;
    pointer-events: none;
  }

  /* Cart badge bounce animation */
  @keyframes bounce-badge {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.4); }
  }

  .badge-bounce {
    animation: bounce-badge 0.4s ease;
  }
</style>

  </head>
  <body>
    <CartStore />
    <Header />
    <slot />
    <Footer />
    <CartDrawer />

    <script>
      import Alpine from 'alpinejs';
      window.Alpine = Alpine;
      Alpine.start();
    </script>

    <!-- Google Analytics -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-415TP4FFJ2"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-415TP4FFJ2');
    </script>
  </body>
</html>