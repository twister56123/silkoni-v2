---
import Layout from '@/layouts/Layout.astro';
import { Image } from 'astro:assets';

// Import product images
import pillowcasePink from '@/assets/products/pillowcase-pink.jpg';
import pillowcaseSage from '@/assets/products/pillowcase-sage.jpg';
import pillowcaseBlue from '@/assets/products/pillowcase-blue.jpg';
import pillowcaseIvory from '@/assets/products/pillowcase-ivory-1.jpg';

import turbanPink from '@/assets/products/turban-pink.jpg';
import turbanSage from '@/assets/products/turban-sage.jpg';
import turbanBlue from '@/assets/products/turban-blue.jpg';
import turbanIvory from '@/assets/products/turban-ivory.jpg';

// Import Instagram images
import insta1 from '@/assets/instagram/post-1.jpg';
import insta2 from '@/assets/instagram/post-2.jpg';
import insta3 from '@/assets/instagram/post-3.jpg';
import insta4 from '@/assets/instagram/post-4.jpg';


// Import benefit images
import benefitSkin from '@/assets/benefit-skin.jpg';
import benefitHair from '@/assets/benefit-hair.jpg';
import benefitRitual from '@/assets/benefit-ritual.jpg';
---

<Layout title="Шовкові наволочки та тюрбани преміум якості | SILKONI">
  

  <main id="main-content">
    
    <!-- HERO -->
    <section id="hero" class="relative min-h-[70vh] md:min-h-[80vh] flex items-center justify-center overflow-hidden" aria-labelledby="hero-title">
      <!-- Background Image -->
      <div class="absolute inset-0 z-0">
        <picture>
  <source media="(max-width: 768px)" srcset="/hero-mobile.jpg" />
  <img
    src="/hero.jpg"
    alt=""
    class="w-full h-full object-cover"
    loading="eager"
    fetchpriority="high"
  />
</picture>
        <!-- Overlay for text readability -->
        <div class="absolute inset-0 bg-black/20"></div>
      </div>

      <!-- Content -->
      <div class="relative z-10 max-w-7xl mx-auto px-4 text-center text-white">
        <h1 id="hero-title" class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4 drop-shadow-lg">
          Прокидайся красивою
        </h1>
        <p class="text-lg md:text-xl mb-8 max-w-2xl mx-auto drop-shadow-md">
          Шовкові наволочки та тюрбани для здорового волосся та сяючої шкіри
        </p>
        <a
          href="#products"
          class="inline-block bg-white text-black px-8 py-4 rounded-xl text-lg font-medium shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-black/30"
        >
          Обрати свою →
        </a>
        <ul class="mt-8 flex flex-wrap justify-center gap-4 md:gap-8 text-sm drop-shadow-md" aria-label="Переваги">
          <li class="flex items-center gap-1">
            <span aria-hidden="true">✓</span> Натуральний шовк
          </li>
          <li class="flex items-center gap-1">
            <span aria-hidden="true">✓</span> Безкоштовна доставка
          </li>
          <li class="flex items-center gap-1">
            <span aria-hidden="true">✓</span> 30 днів гарантія
          </li>
        </ul>
      </div>
    </section>

    <!-- PRODUCTS -->
    <section id="products" class="py-16 md:py-24" aria-labelledby="products-title">
      <div class="max-w-7xl mx-auto px-4">
        <h2 id="products-title" class="text-3xl font-bold text-center mb-12">Наші товари</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

          <!-- Product 1: Pillowcase -->
          <article
            class="border border-gray-200 rounded-xl p-6 bg-white shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300"
            x-data={`{
              selectedColor: 'pink',
              colors: {
                pink: { name: 'Рожевий', src: '${pillowcasePink.src}' },
                sage: { name: 'Травʼяний', src: '${pillowcaseSage.src}' },
                blue: { name: 'Блакитний', src: '${pillowcaseBlue.src}' },
                ivory: { name: 'Айворі', src: '${pillowcaseIvory.src}' }
              }
            }`}
          >
            <div class="aspect-square rounded-lg mb-4 overflow-hidden bg-gray-100">
              <img
                x-bind:src="colors[selectedColor].src"
                x-bind:alt="'Шовкова наволочка ' + colors[selectedColor].name + ' кольору'"
                class="w-full h-full object-cover transition-opacity duration-300"
                loading="eager"
                fetchpriority="high"
              />
            </div>

            <h3 class="text-xl font-bold mb-2">Шовкова наволочка</h3>
            <p class="mb-2">
              <span class="text-lg text-gray-500 line-through mr-2">2500 ₴</span>
              <span class="text-2xl font-bold text-black">2190 ₴</span>
            </p>
            <p class="text-gray-700 mb-4">Преміальна шовкова наволочка для здорового сну</p>

            <!-- Color selector -->
            <div class="mb-4">
              <p class="text-sm text-gray-600 mb-2">
                Колір: <span class="font-medium" x-text="colors[selectedColor].name"></span>
              </p>
              <div class="flex gap-2" role="group" aria-label="Оберіть колір">
                <button
                  type="button"
                  x-on:click="selectedColor = 'pink'"
                  class="w-8 h-8 rounded-full bg-[#E8C4C4] transition-all focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2"
                  x-bind:class="selectedColor === 'pink' ? 'ring-2 ring-black ring-offset-2 scale-110' : 'border-2 border-gray-300 hover:scale-110 hover:shadow-md'"
                  aria-label="Рожевий"
                ></button>
                <button
                  type="button"
                  x-on:click="selectedColor = 'sage'"
                  class="w-8 h-8 rounded-full bg-[#C5D1C5] transition-all focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2"
                  x-bind:class="selectedColor === 'sage' ? 'ring-2 ring-black ring-offset-2 scale-110' : 'border-2 border-gray-300 hover:scale-110 hover:shadow-md'"
                  aria-label="Шавлієвий"
                ></button>
                <button
                  type="button"
                  x-on:click="selectedColor = 'blue'"
                  class="w-8 h-8 rounded-full bg-[#B8C9D4] transition-all focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2"
                  x-bind:class="selectedColor === 'blue' ? 'ring-2 ring-black ring-offset-2 scale-110' : 'border-2 border-gray-300 hover:scale-110 hover:shadow-md'"
                  aria-label="Блакитний"
                ></button>
                <button
                  type="button"
                  x-on:click="selectedColor = 'ivory'"
                  class="w-8 h-8 rounded-full bg-[#F5F0E6] transition-all focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2"
                  x-bind:class="selectedColor === 'ivory' ? 'ring-2 ring-black ring-offset-2 scale-110' : 'border-2 border-gray-300 hover:scale-110 hover:shadow-md'"
                  aria-label="Айворі"
                ></button>
              </div>
            </div>

            <button
              type="button"
              class="w-full bg-black text-white py-3 rounded-md hover:bg-black/90 transition-colors focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2"
              @click="$store.cart.add('Шовкова наволочка', selectedColor, colors[selectedColor].name, 2190); gtag('event', 'add_to_cart', {currency: 'UAH', value: 2190, items: [{item_id: 'pillowcase-' + selectedColor, item_name: 'Шовкова наволочка', item_variant: colors[selectedColor].name, price: 2190, quantity: 1}]}); zaraz.ecommerce('Add to Cart', {products: [{product_id: 'pillowcase-' + selectedColor, name: 'Шовкова наволочка', variant: colors[selectedColor].name, price: 2190, quantity: 1}]})"
            >
              Додати в кошик
            </button>
          </article>

          <!-- Product 2: Turban -->
          <article
            class="border border-gray-200 rounded-xl p-6 bg-white shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300"
            x-data={`{
              selectedColor: 'pink',
              colors: {
                pink: { name: 'Рожевий', src: '${turbanPink.src}' },
                sage: { name: 'Травʼяний', src: '${turbanSage.src}' },
                blue: { name: 'Блакитний', src: '${turbanBlue.src}' },
                ivory: { name: 'Айворі', src: '${turbanIvory.src}' }
              }
            }`}
          >
            <div class="aspect-square rounded-lg mb-4 overflow-hidden bg-gray-100">
              <img
                x-bind:src="colors[selectedColor].src"
                x-bind:alt="'Шовковий тюрбан ' + colors[selectedColor].name + ' кольору'"
                class="w-full h-full object-cover transition-opacity duration-300"
                loading="lazy"
              />
            </div>

            <h3 class="text-xl font-bold mb-2">Шовковий тюрбан</h3>
            <p class="mb-2">
              <span class="text-lg text-gray-500 line-through mr-2">2500 ₴</span>
              <span class="text-2xl font-bold text-black">1990 ₴</span>
            </p>
            <p class="text-gray-700 mb-4">Шовковий тюрбан для делікатного догляду за волоссям</p>

            <!-- Color selector -->
            <div class="mb-4">
              <p class="text-sm text-gray-600 mb-2">
                Колір: <span class="font-medium" x-text="colors[selectedColor].name"></span>
              </p>
              <div class="flex gap-2" role="group" aria-label="Оберіть колір">
                <button
                  type="button"
                  x-on:click="selectedColor = 'pink'"
                  class="w-8 h-8 rounded-full bg-[#E8C4C4] transition-all focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2"
                  x-bind:class="selectedColor === 'pink' ? 'ring-2 ring-black ring-offset-2 scale-110' : 'border-2 border-gray-300 hover:scale-110 hover:shadow-md'"
                  aria-label="Рожевий"
                ></button>
                <button
                  type="button"
                  x-on:click="selectedColor = 'sage'"
                  class="w-8 h-8 rounded-full bg-[#C5D1C5] transition-all focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2"
                  x-bind:class="selectedColor === 'sage' ? 'ring-2 ring-black ring-offset-2 scale-110' : 'border-2 border-gray-300 hover:scale-110 hover:shadow-md'"
                  aria-label="Шавлієвий"
                ></button>
                <button
                  type="button"
                  x-on:click="selectedColor = 'blue'"
                  class="w-8 h-8 rounded-full bg-[#B8C9D4] transition-all focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2"
                  x-bind:class="selectedColor === 'blue' ? 'ring-2 ring-black ring-offset-2 scale-110' : 'border-2 border-gray-300 hover:scale-110 hover:shadow-md'"
                  aria-label="Блакитний"
                ></button>
                <button
                  type="button"
                  x-on:click="selectedColor = 'ivory'"
                  class="w-8 h-8 rounded-full bg-[#F5F0E6] transition-all focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2"
                  x-bind:class="selectedColor === 'ivory' ? 'ring-2 ring-black ring-offset-2 scale-110' : 'border-2 border-gray-300 hover:scale-110 hover:shadow-md'"
                  aria-label="Айворі"
                ></button>
              </div>
            </div>

            <button
              type="button"
              class="w-full bg-black text-white py-3 rounded-xl shadow-md hover:shadow-lg hover:bg-gray-900 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2"
@click="$store.cart.add('Шовковий тюрбан', selectedColor, colors[selectedColor].name, 1990); gtag('event', 'add_to_cart', {currency: 'UAH', value: 1990, items: [{item_id: 'turban-' + selectedColor, item_name: 'Шовковий тюрбан', item_variant: colors[selectedColor].name, price: 1990, quantity: 1}]}); zaraz.ecommerce('Add to Cart', {products: [{product_id: 'turban-' + selectedColor, name: 'Шовковий тюрбан', variant: colors[selectedColor].name, price: 1990, quantity: 1}]})"
            >
              Додати в кошик
            </button>
          </article>

        </div>

        <!-- Category Links -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-4">
          <a
            href="/navolochky/"
            class="group flex items-center justify-center gap-3 px-6 py-4 bg-gray-50 border border-gray-200 rounded-xl text-gray-700 hover:bg-white hover:border-gray-300 hover:shadow-md transition-all duration-300"
          >
            <span>Переглянути всі наволочки</span>
            <span class="group-hover:translate-x-1 transition-transform duration-300" aria-hidden="true">→</span>
          </a>
          <a
            href="/turbany/"
            class="group flex items-center justify-center gap-3 px-6 py-4 bg-gray-50 border border-gray-200 rounded-xl text-gray-700 hover:bg-white hover:border-gray-300 hover:shadow-md transition-all duration-300"
          >
            <span>Переглянути всі тюрбани</span>
            <span class="group-hover:translate-x-1 transition-transform duration-300" aria-hidden="true">→</span>
          </a>
        </div>

      </div>
    </section>

    <!-- BENEFITS -->
    <section id="benefits" class="py-16 md:py-24" aria-labelledby="benefits-title">
      <div class="max-w-7xl mx-auto px-4">
        <h2 id="benefits-title" class="text-3xl font-bold text-center mb-12">Чому обирають шовк</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

          <div class="relative h-80 md:h-96 rounded-2xl overflow-hidden shadow-lg group">
            <Image
              src={benefitSkin}
              alt="Сяюча шкіра"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
              <h3 class="text-xl font-bold mb-2">Сяюча шкіра</h3>
              <p class="text-sm">Шовк не забирає вологу та не залишає заломів на обличчі. Прокидайся сяючою.</p>
            </div>
          </div>

          <div class="relative h-80 md:h-96 rounded-2xl overflow-hidden shadow-lg group">
            <Image
              src={benefitHair}
              alt="Розкішне волосся"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
              <h3 class="text-xl font-bold mb-2">Розкішне волосся</h3>
              <p class="text-sm">Менше тертя — менше ламкості. Твоє волосся зберігає силу та природне сяйво.</p>
            </div>
          </div>

          <div class="relative h-80 md:h-96 rounded-2xl overflow-hidden shadow-lg group">
            <Image
              src={benefitRitual}
              alt="Любов до себе"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
              <h3 class="text-xl font-bold mb-2">Любов до себе</h3>
              <p class="text-sm">Починається з деталей. Шовкова наволочка — це щоденний ритуал турботи про себе.</p>
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- TESTIMONIALS -->
    <section id="testimonials" class="py-16 md:py-24" aria-labelledby="testimonials-title">
      <div class="max-w-7xl mx-auto px-4">
        <h2 id="testimonials-title" class="text-3xl font-bold text-center mb-12">Відгуки клієнток</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          
          <article class="border border-gray-200 rounded-xl p-6 bg-white shadow-sm hover:shadow-md transition-shadow duration-300">
            <div class="flex items-center gap-1 mb-4 text-yellow-500" role="img" aria-label="Оцінка: 5 з 5 зірок">
              ★★★★★
            </div>
            <blockquote class="text-gray-700 mb-4">"Нарешті знайшла ідеальну наволочку! Волосся більше не плутається вранці."</blockquote>
            <footer class="flex items-center gap-3">
              <div class="w-10 h-10 bg-gray-200 rounded-full" aria-hidden="true"></div>
              <div>
                <p class="font-bold">Олена</p>
                <p class="text-sm text-gray-600">Київ</p>
              </div>
            </footer>
          </article>

          <article class="border border-gray-200 rounded-xl p-6 bg-white shadow-sm hover:shadow-md transition-shadow duration-300">
            <div class="flex items-center gap-1 mb-4 text-yellow-500" role="img" aria-label="Оцінка: 5 з 5 зірок">
              ★★★★★
            </div>
            <blockquote class="text-gray-700 mb-4">"Подарувала мамі тюрбан — вона в захваті! Замовляю ще один собі."</blockquote>
            <footer class="flex items-center gap-3">
              <div class="w-10 h-10 bg-gray-200 rounded-full" aria-hidden="true"></div>
              <div>
                <p class="font-bold">Марія</p>
                <p class="text-sm text-gray-600">Львів</p>
              </div>
            </footer>
          </article>

          <article class="border border-gray-200 rounded-xl p-6 bg-white shadow-sm hover:shadow-md transition-shadow duration-300">
            <div class="flex items-center gap-1 mb-4 text-yellow-500" role="img" aria-label="Оцінка: 5 з 5 зірок">
              ★★★★★
            </div>
            <blockquote class="text-gray-700 mb-4">"Якість на вищому рівні. Шовк справжній, приємний на дотик."</blockquote>
            <footer class="flex items-center gap-3">
              <div class="w-10 h-10 bg-gray-200 rounded-full" aria-hidden="true"></div>
              <div>
                <p class="font-bold">Анна</p>
                <p class="text-sm text-gray-600">Одеса</p>
              </div>
            </footer>
          </article>

        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section id="faq" class="bg-gradient-to-b from-white to-gray-50 py-16 md:py-24" aria-labelledby="faq-title">
      <div class="max-w-7xl mx-auto px-4">
        <h2 id="faq-title" class="text-3xl font-bold text-center mb-12">Часті питання</h2>
        <div class="max-w-2xl mx-auto space-y-4">
          
          <details class="border border-gray-200 rounded-lg bg-white group">
            <summary class="p-4 cursor-pointer font-medium list-none flex justify-between items-center focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2 rounded-lg">
              Як доглядати за шовковою наволочкою?
              <span class="text-gray-600 group-open:rotate-180 transition-transform" aria-hidden="true">▼</span>
            </summary>
            <p class="px-4 pt-2 pb-6 text-gray-700 leading-relaxed">Рекомендуємо ручне прання при температурі до 30°C. Не використовуйте відбілювачі та пральну машину.</p>
          </details>

          <details class="border border-gray-200 rounded-lg bg-white group">
            <summary class="p-4 cursor-pointer font-medium list-none flex justify-between items-center focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2 rounded-lg">
              Яка доставка?
              <span class="text-gray-600 group-open:rotate-180 transition-transform" aria-hidden="true">▼</span>
            </summary>
            <p class="px-4 pt-2 pb-6 text-gray-700 leading-relaxed">Доставляємо Новою Поштою по всій Україні. Безкоштовно при замовленні від 1500 ₴.</p>
          </details>

          <details class="border border-gray-200 rounded-lg bg-white group">
            <summary class="p-4 cursor-pointer font-medium list-none flex justify-between items-center focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2 rounded-lg">
              Чи можна повернути товар?
              <span class="text-gray-600 group-open:rotate-180 transition-transform" aria-hidden="true">▼</span>
            </summary>
            <p class="px-4 pt-2 pb-6 text-gray-700 leading-relaxed">Так, ви маєте 30 днів на повернення, якщо товар не підійшов. Головне — збережіть упаковку.</p>
          </details>

          <details class="border border-gray-200 rounded-lg bg-white group">
            <summary class="p-4 cursor-pointer font-medium list-none flex justify-between items-center focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2 rounded-lg">
              Це справжній шовк?
              <span class="text-gray-600 group-open:rotate-180 transition-transform" aria-hidden="true">▼</span>
            </summary>
            <p class="px-4 pt-2 pb-6 text-gray-700 leading-relaxed">Так, ми використовуємо 100% натуральний шовк муліни щільністю 22 момі — це преміальна якість.</p>
          </details>

        </div>
      </div>
    </section>

    <!-- INSTAGRAM -->
    <section id="instagram" class="py-16 md:py-24" aria-labelledby="instagram-title">
      <div class="max-w-7xl mx-auto px-4 text-center">
        <h2 id="instagram-title" class="text-3xl font-bold mb-4">Слідкуйте за нами</h2>
        <a
          href="https://www.instagram.com/silkoni.beauty/"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block text-gray-600 hover:text-black transition-colors mb-8"
        >
          @silkoni.beauty
        </a>

        <a
          href="https://www.instagram.com/silkoni.beauty/"
          target="_blank"
          rel="noopener noreferrer"
          class="block"
        >
          <div class="grid grid-cols-2 md:grid-cols-4 gap-2 md:gap-4 max-w-4xl mx-auto">
            <div class="aspect-square rounded-lg overflow-hidden hover:opacity-90 transition-opacity">
              <Image
                src={insta1}
                alt="Instagram пост Silkoni"
                width={300}
                height={300}
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>
            <div class="aspect-square rounded-lg overflow-hidden hover:opacity-90 transition-opacity">
              <Image
                src={insta2}
                alt="Instagram пост Silkoni"
                width={300}
                height={300}
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>
            <div class="aspect-square rounded-lg overflow-hidden hover:opacity-90 transition-opacity">
              <Image
                src={insta3}
                alt="Instagram пост Silkoni"
                width={300}
                height={300}
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>
            <div class="aspect-square rounded-lg overflow-hidden hover:opacity-90 transition-opacity">
              <Image
                src={insta4}
                alt="Instagram пост Silkoni"
                width={300}
                height={300}
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>
          </div>
